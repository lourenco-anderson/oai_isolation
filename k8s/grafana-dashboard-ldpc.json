{
  "dashboard": {
    "id": null,
    "uid": "oai-ldpc-power",
    "title": "OAI LDPC - Power & Energy",
    "tags": ["oai", "ldpc", "kepler"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "templating": {
      "list": [
        {
          "type": "query",
          "name": "pod",
          "label": "Pod",
          "datasource": "Prometheus",
          "query": "label_values(kepler_container_core_joules_total{namespace=\"oai-isolation\", pod_name=~\"gnb-ldpc.*\"}, pod_name)",
          "refresh": 2,
          "includeAll": true,
          "allValue": ".*",
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "type": "timeseries",
        "title": "CPU Power (W)",
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "unit": "watt",
            "color": {"mode": "palette-classic"}
          },
          "overrides": []
        },
        "targets": [
          {
            "refId": "A",
            "expr": "rate(kepler_container_core_joules_total{namespace=\"oai-isolation\", pod_name=~\"$pod\"}[1m])",
            "legendFormat": "{{pod_name}}"
          }
        ]
      },
      {
        "id": 2,
        "type": "timeseries",
        "title": "Total Power (CPU+DRAM) (W)",
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "unit": "watt",
            "color": {"mode": "palette-classic"}
          },
          "overrides": []
        },
        "targets": [
          {
            "refId": "A",
            "expr": "rate(kepler_container_joules_total{namespace=\"oai-isolation\", pod_name=~\"$pod\"}[1m])",
            "legendFormat": "{{pod_name}}"
          }
        ]
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Avg CPU Power (last 15m)",
        "datasource": "Prometheus",
        "fieldConfig": {
          "defaults": {
            "unit": "watt",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "orange", "value": 20},
                {"color": "red", "value": 40}
              ]
            }
          },
          "overrides": []
        },
        "options": {"colorMode": "background", "graphMode": "none", "reduceOptions": {"calcs": ["last"], "fields": ""}},
        "targets": [
          {
            "refId": "A",
            "expr": "avg_over_time(rate(kepler_container_core_joules_total{namespace=\"oai-isolation\", pod_name=~\"$pod\"}[1m])[15m:1m])",
            "legendFormat": "{{pod_name}}"
          }
        ]
      }
    ]
  },
  "overwrite": true,
  "folderId": 0
}
